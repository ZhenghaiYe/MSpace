<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/favicon.ico")" />
		<style type="text/css">
			body {
				padding-top: 70px;
				padding-bottom: 40px;
			}
			form {
				margin: 0;
			}
			textarea {
				display: block;
			}
			
			#toTop{width:67px;height:114px;background:url('@Url.Content("~/Content/toTop.gif")');position:fixed;bottom:55px;left:25px;display:none;}
		</style>
	<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
