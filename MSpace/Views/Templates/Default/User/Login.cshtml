<div class="row-fluid">
            @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal"}))
            {
                @Html.ValidationSummary(excludePropertyErrors: true)
                <fieldset>
                    <legend>会员登录</legend>
                    <div class="control-group">
                        <label class="control-label" for="Email">电子邮箱</label>
                        <div class="controls">
                            @Html.TextBox("Email","",new { @class = "input-xlarge" })
                            <p class="help-block"></p>
                      </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Password">密码</label>
                        <div class="controls">
                            @Html.Password("Password","",new { @class = "input-xlarge" })
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="CheckCode">验证码</label>
                        <div class="controls">
                            <input type="text" name="CheckCode" class = "input-medium" />&emsp;请输入下面的验证码
                            <p class="help-block">
                                <img id="verificationcode" src="@Url.Action("VerificationCode", "User")" />
                            </p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for=""></label>
                        <div class="controls">
                            @Html.CheckBox("IsRemember", false, new { @class = "input-xlarge" })记住密码&emsp;
                            @Html.ActionLink("注册", "Register", "User", new { })&emsp;
                            @Html.ActionLink("忘记密码?", "ForgetPassword", "User", new { })&emsp;
                            <p class="help-block">
                                <span class="label label-info">注意：如果你在网吧等公众场合的机器上登录本站,请在离开机器前退出.</span>
                            </p>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" ></label>
                        <div class="controls">
                            <input type="submit" class = "btn btn-primary" value=" 登  录 " />
                            <p class="help-block">
                                
                            </p>
                        </div>
                    </div>
                </fieldset>
            }
</div>