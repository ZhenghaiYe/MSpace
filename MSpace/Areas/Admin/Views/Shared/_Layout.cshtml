<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!-- Mobile viewport optimized: h5bp.com/viewport -->
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/admin/favicon.ico")" />
    <title>@ViewBag.Title</title>

    <!-- remove or comment this line if you want to use the local fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/bootstrap.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/bootstrap-responsive.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/bootmetro.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/bootmetro-tiles.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/bootmetro-charms.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/metro-ui-light.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/icomoon.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/admin/css/datepicker.css")">
    

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="content/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/admin/ico/apple-touch-icon-144-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/admin/ico/apple-touch-icon-114-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/Content/admin/ico/apple-touch-icon-72-precomposed.png")">
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/admin/ico/apple-touch-icon-57-precomposed.png")">

    <script src="@Url.Content("~/Scripts/jquery-1.7.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.transit.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jQuery.tmpl.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.0.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/widgets/artDialog/skins/twitter.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/widgets/artDialog/artDialog.min.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/Content/widgets/showDialog/showDialog.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/widgets/showDialog/showDialog.js")" type="text/javascript"></script>
    
    <script src="http://js.live.net/v5.0/wl.js"></script>
    
    <script type="text/javascript" src="@Url.Content("~/Scripts/jsrender.js")"></script>

    @RenderSection("Scripts", false)

    <script type="text/javascript">
        
    </script>
</head>

<body>
    <!-- Header ================================================== -->
    <header id="nav-bar" class="container-fluid">
        <div class="row-fluid">
            <div class="span8">
                <div id="header-container">
                    @*@Html.RouteLink(
                        linkText: " ",
                        routeName: "AdminRoute",
                        routeValues: new { controller = "Home", action = "Index" },
                        htmlAttributes: new { id = "backbutton", @class = "win-backbutton" }
                    )*@
                    <a class="win-backbutton" href="@Context.Request.UrlReferrer" id="backbutton"> </a>
                    @*@RenderSection("BackButton", false)*@
                    <h5><b class="icon-cube"></b> <strong> MSpace</strong></h5>
                    <div class="dropdown">
                        @*<b aria-hidden="true" data-icon="&#x0021;"></b>*@
                        <a class="header-dropdown dropdown-toggle accent-color" data-toggle="dropdown" href="#">
                            开始
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.RouteUrl(new { controller = "Article", action = "Write" })">写文章</a></li>
                            <li><a href="@Url.RouteUrl(new { controller = "Twitter", action = "Index" })">碎语</a></li>
                            <li><a href="./appbar-demo.html">Demo App-Bar</a></li>
                            <li><a href="./table.html">Demo Table</a></li>
                            <li><a href="./icons.html">Icons</a></li>
                            <li><a href="./scaffolding.html">Bootstrap Scaffolding</a></li>
                            <li><a href="./base-css.html">Bootstrap Base CSS</a></li>
                            <li><a href="./components.html">Bootstrap Components</a></li>
                            <li><a href="./javascript.html">Bootstrap Javascript</a></li>
                            <li class="divider"></li>
                            <li>@Html.RouteLink(
                                    linkText: "返回首页",
                                    routeName: "DefaultRoute",
                                    routeValues: new { controller="Home", action="Index" }
                                )
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="top-info" class="pull-right">
                <a href="#" class="pull-left">
                    <div class="top-info-block">
                        <h3>常</h3>
                        <h4>伟华</h4>
                    </div>
                    <div class="top-info-block">
                        <b class="icon-user-3"></b>
                    </div>
                    </a>
                    <hr class="separator pull-left"/>
                    <a id="settings" class="pull-left" href="#">
                        <b class="icon-settings"></b>
                    </a>
                </div>
        </div>
    </header>
    
    <div class="container-fluid">
        <div class="row-fluid">
            @RenderBody()
        </div>
    </div>

    <footer id="commandContainer" class="win-commandlayout win-ui-dark navbar-fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="span6 align-left">
                    <a class="win-command" href="@Url.RouteUrl(new { controller = "Home", action = "Index" })">
                        <span class="win-commandimage win-commandring">&#x0021;</span>
                        <span class="win-label">主页</span>
                    </a>
                    <a class="win-command" href="@Context.Request.Url">
                        <span class="win-commandimage win-commandring">&#xe1de;</span>
                        <span class="win-label">刷新页面</span>
                    </a>
                    <hr class="win-command" />
                    @RenderSection("LeftFooter", false)
                </div>
                <div class="span6 align-right">
                    @*<button class="win-command">
                        <span class="win-commandimage win-commandring">&#xe1cd;</span>
                        <span class="win-label">上一页</span>
                    </button>
                    <button class="win-command">
                        <span class="win-commandimage win-commandring">&#xe1ca;</span>
                        <span class="win-label">下一页</span>
                    </button>*@
                    @RenderSection("RightFooter", false)
                </div>
            </div>
        </div>
    </footer>
    
   
    <div id="charms" class="win-ui-dark">
        <div id="theme-charms-section" class="charms-section">
            <div class="charms-header">
                <a href="#" class="close-charms win-command">
                    <span class="win-commandimage win-commandring">&#xe05d;</span>
                </a>
                <h2>系统设置</h2>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <form class="">
                        <label for="win-theme-select">Change theme:</label>
                        <select id="win-theme-select" class="">
                            <option value="metro-ui-semilight">Semi-Light</option>
                            <option value="metro-ui-light">Light</option>
                            <option value="metro-ui-dark">Dark</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Grab Google CDN's jQuery. fall back to local if necessary -->  
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>*@
    @*<script>window.jQuery || document.write("<script src='@Url.Content("~/Scripts/jquery-1.9.0.min.js")'>\x3C/script>")</script>*@

    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.mousewheel.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.scrollTo.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/bootstrap.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/bootstrap-datepicker.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/bootmetro.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/bootmetro-charms.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/holder.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/jquery.blockUI.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/admin/scripts/mustache.js")"></script>

    <script type="text/javascript">
       $(".metro").metro();
    </script>   	
</body>
</html>
